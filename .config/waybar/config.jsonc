{
  "layer": "top", // Waybar at top layer
  "position": "top", // Waybar position (top|bottom|left|right)
  "height": 16, // Waybar height (to be removed for auto height)
  // "width": 1280, // Waybar width
  "spacing": 8, // Gaps between modules (4px)
  "margin-top": 8,
  "margin-left": 20,
  "margin-right": 20,
  "margin-bottom": -12,
  "mode": "dock",
  "reload_style_on_change": true,
  //   "include": [
  //     "~/.config/waybar/modules.json",
  //     "~/.config/waybar/quicklinks.json",
  //     "~/.config/waybar/hardware.json",
  //     "~/.config/waybar/media.json",
  //     "~/.config/waybar/media.json"
  //   ],
  "modules-left": [
    "custom/icon",
    //"group/quicklinks",
    //"tray",
    //"hyprland/window",
    "custom/cava",
  ],
  "modules-center": ["hyprland/workspaces"],
  "modules-right": [
    "network",
    // "mpd",
    "group/media",
    "group/hardware",
    "clock",
    "custom/notification",
    "custom/exit",
  ],
  "cpu": {
    "format": "Ôãõ {usage}%",
    "on-click": "kitty -e btop",
  },
  "memory": {
    "format": "ÔÉâ {}%",
    "on-click": "kitty -e btop",
  },
  "disk": {
    "interval": 30,
    "format": "D {percentage_used}% ",
    "path": "/",
    "on-click": "kitty -e btop",
  },
  "temperature": {
    "format": "{icon} {temperatureC}¬∞C",
    "format-icons": ["Ôù´", "Ôãâ", "Ôù©"],
    "interval": 1,
    "critical-threshold": 80,
    "hwmon-path-abs": "/sys/devices/platform/coretemp.0/hwmon",
    "input-filename": "temp1_input",
  },
  "group/hardware": {
    "orientation": "horizontal",
    "modules": ["cpu", "memory", "disc", "temperature"],
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-bluetooth": "{volume}% {icon} Ôäî",
    "format-bluetooth-muted": "Ôö©  {icon} Ôäî",
    "format-muted": "Ôö© ",
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "Ôñê",
      "headset": "Ôñê",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["ÔÄ¶ ", "ÔÄ® ", "ÔÄ® "],
    },
    "scroll-step": 5,
    "on-click-right": "pavucontrol",
    "on-click": "amixer set Master toggle",
  },
  "pulseaudio#mic": {
    "format": "{icon} {format_source}",
    "format-source": "ÔÑ∞ {volume}%",
    "format-source-muted": "ÔÑ± ",
    "on-scroll-up": "amixer set Capture 5%+",
    "on-scroll-down": "amixer set Capture 5%-",
    "on-click-right": "pavucontrol",
    "on-click": "amixer set Capture toggle",
  },

  "group/media": {
    "orientation": "horizontal",
    "modules": ["pulseaudio", "pulseaudio#mic"],
  },
  "hyprland/workspaces": {
    "on-click": "activate",
    "active-only": true,
    "all-outputs": true,
    "format": "{}",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": "",
    },
    "persistent-workspaces": {
      "*": 5,
    },
  },

  // Hyprland Window
  "hyprland/window": {
    "rewrite": {
      "(.*) - Zen Browser": "$1",
      "(.*) - Brave": "$1",
      "(.*) - Chromium": "$1",
      "(.*) - Brave Search": "$1",
      "(.*) - Outlook": "$1",
      "(.*) Microsoft Teams": "$1",
    },
    "separate-outputs": true,
  },
  "custom/icon": {
    "format": "\uf30a", // \uf30a is the JSON escape for the character
    "tooltip": false,
    "on-click": "wofi --show drun --allow-images --prompt ''",
  },
  // Power Menu
  "custom/exit": {
    "format": "ÔÄë",
    "tooltip-format": "Powermenu",
    "on-click": "wlogout -b 4",
    "tooltip": false,
  },

  "custom/notification": {
    "tooltip": false,
    // "format": "{} {icon}",
    "format": "{icon}",
    "format-icons": {
      "notification": "Û±Ö´",
      "none": "Û∞Çö",
      "dnd-notification": "Û±Ö´",
      "dnd-none": "Û∞Çõ",
      "inhibited-notification": "ÔÇ¢",
      "inhibited-none": "ÔÇ¢",
      "dnd-inhibited-notification": "ÔÇ¢",
      "dnd-inhibited-none": "ÔÇ¢",
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true,
  },

  "tray": {
    "icon-size": 24,
    "spacing": 8,
  },
  "custom/cava": {
    "format": "{}",
    "exec": "cava -p ~/.config/cava/config_waybar | sed -u 's/;//g; s/0/‚ñÅ/g; s/1/‚ñÇ/g; s/2/‚ñÉ/g; s/3/‚ñÑ/g; s/4/‚ñÖ/g; s/5/‚ñÜ/g; s/6/‚ñá/g; s/7/‚ñà/g;'",
    "restart-interval": 0.001,
  },

  "clock": {
    // "timezone": "America/New_York",
    "interval": 1,
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format-alt": "Û∞•î {0:%H:%M}",
    "format": "Û∞•î {0:%I:%M:%S %p}  ÔÅ≥ {0:%a, %b %d}",
  },

  "hyprland/language": {
    "format": "/ K {short}",
  },

  // Network
  "network": {
    "format": "{ifname}",
    "format-wifi": "Ôá´  {signalStrength}% ÔÑ∫ {bandwidthDownBytes} ÔÑπ {bandwidthUpBytes} ",
    "format-ethernet": "Ôäá  ÔÑ∫ {bandwidthDownBytes} ÔÑπ {bandwidthUpBytes} ",
    "format-disconnected": "Û∞≤õ ",
    "tooltip-format": "Ôäá  {ifname} via {gwaddri}",
    "tooltip-format-wifi": "Ôá´   {essid} ({signalStrength}%)",
    "tooltip-format-ethernet": "ÔÉÅ  {ifname} ({ipaddr}/{cidr})",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50,
    "interval": 1,
    "on-click": "nm-connection-editor",
  },

  // Battery
  "battery": {
    "states": {
      // "good": 95,
      "warning": 30,
      "critical": 15,
    },
    "format": "{icon}   {capacity}%",
    "format-charging": "Ôóß  {capacity}%",
    "format-plugged": "Ôá¶  {capacity}%",
    "format-alt": "{icon}  {time}",
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    "format-icons": ["ÔâÑ ", "ÔâÉ ", "ÔâÇ ", "ÔâÅ ", "ÔâÄ "],
  },

  // Bluetooth
  "bluetooth": {
    "format-disabled": "",
    "format-off": "",
    "interval": 30,
    "on-click": "blueman-manager",
    "format-no-controller": "",
  },

  // Other
  "user": {
    "format": "{user}",
    "interval": 60,
    "icon": false,
  },

  // Idle Inhibator
  "idle_inhibitor": {
    "format": "{icon}",
    "tooltip": true,
    "format-icons": {
      "activated": "ÔèÅ",
      "deactivated": "ÔÄ£",
    },
    "on-click-right": "hyprlock",
  },
}
